{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "npm run services:up && npm run wait-for-postgres && npm run migrate:dev && tsx watch src/server.ts",
    "services:up": "docker compose -f src/infra/compose.yaml up -d",
    "services:stop": "docker compose -f src/infra/compose.yaml stop",
    "services:down": "docker compose -f src/infra/compose.yaml down",
    "test": "npm run services:up && concurrently --names express,jest --hide express --kill-others --success command-jest \"tsx src/server.ts\" \"jest --runInBand --verbose\"",
    "test:watch": "jest --watch --runInBand",
    "migrate:dev": "dotenv -e .env.development -- npx prisma migrate dev",
    "lint:eslint:check": "eslint .",
    "lint:eslint:fix": "eslint . --fix",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "postinstall": "prisma generate",
    "wait-for-postgres": "tsx src/infra/scripts/wait-for-postgres.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/async-retry": "^1.4.9",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.3",
    "concurrently": "^9.1.2",
    "eslint": "^9.29.0",
    "eslint-plugin-prettier": "^5.4.1",
    "globals": "^16.2.0",
    "jest": "^30.0.2",
    "jest-environment-node": "^30.0.2",
    "prettier": "^3.5.3",
    "prisma": "^6.9.0",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1"
  },
  "dependencies": {
    "@prisma/client": "^6.9.0",
    "async-retry": "^1.3.3",
    "dotenv": "^16.5.0",
    "dotenv-expand": "^12.0.2",
    "express": "^5.1.0"
  }
}
